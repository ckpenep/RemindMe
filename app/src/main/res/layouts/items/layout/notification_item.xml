<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="@dimen/margin_9"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_small"
                android:text="daily workout"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".90"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/status_color"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/status_circle"/>

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_clock"/>

                    <TextView
                        android:id="@+id/timeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_marginTop="2dp"
                        android:paddingBottom="@dimen/margin_small"
                        android:text="7:40 PM"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_calendar"/>

                    <TextView
                        android:id="@+id/dateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_marginTop="2dp"
                        android:paddingBottom="@dimen/margin_small"
                        android:text="Thu 10/12/2017"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_alarm_check"/>

                    <TextView
                        android:id="@+id/checkTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_marginTop="2dp"
                        android:paddingBottom="@dimen/margin_small"
                        android:text="Daily"
                        android:textSize="14sp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/status_button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="right"
                    android:layout_marginBottom="1dp"
                    android:background="@mipmap/ic_star_outline"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>